# Final Render Production Configuration
# Replace your current .env with these settings

## IMPORTANT: Set in Render Dashboard â†’ Environment, do not commit secrets here
SECRET_KEY=
DEBUG=False
DJANGO_SETTINGS_MODULE=moviemate.production_settings

# Database - Leave empty (Render sets automatically)
DATABASE_URL=

# Hosts
ALLOWED_HOSTS=localhost,127.0.0.1,.onrender.com

# CORS - Update with your frontend domain
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# JWT
SIMPLE_JWT_ACCESS_TOKEN_LIFETIME=60
SIMPLE_JWT_REFRESH_TOKEN_LIFETIME=1440

# Security - CRITICAL for HTTP-only JWT cookies over HTTPS
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
AUTH_COOKIE_SECURE=True
AUTH_COOKIE_HTTPONLY=True
REFRESH_COOKIE_SECURE=True
REFRESH_COOKIE_HTTPONLY=True

# Additional cookie security
SESSION_COOKIE_SAMESITE=Lax
AUTH_COOKIE_SAMESITE=Lax
REFRESH_COOKIE_SAMESITE=Lax
